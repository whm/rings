[Unit]
Description=Ring Resize
After=network.target

[Service]
ExecStart=/usr/bin/ring-load-daemon
Restart=on-failure
PrivateTmp=true
PrivateDevices=yes
ProtectSystem=full
ProtectHome=read-only
User=www-data
Group=www-data
StartLimitIntervalSec=2
StartLimitBurst=60

[Install]
WantedBy=multi-user.target
