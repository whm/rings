[Unit]
Description=Ring Load Daemon
After=network.target

[Service]
ExecStart=/usr/bin/ring-daemon pending
Restart=on-failure
PrivateTmp=true
PrivateDevices=yes
ProtectSystem=full
ProtectHome=read-only
User=www-data
Group=www-data
Restart=on-failure
StartLimitIntervalSec=2
StartLimitBurst=60

[Install]
WantedBy=multi-user.target
